extends ../layouts/main.pug

block scripts
  script(src="main.js")
  script(src="chat.js")

block content
  main.container
    div.messages-wrapper(js-messages-wrapper)
      ol.messages(js-messages)
      span.loader(js-loader)
        span.dots
    form.form(action="/" method="POST" js-form)
      input.input(name="message", type="text" autocomplete="off" js-input)
      button.btn(type="submit")='Send'
      a.btn.btn--danger(href="/reset" js-reset-btn)='Reset'